generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

// NextAuth required models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Application models
model Investor {
  id            String      @id @default(cuid())
  email         String      @unique
  name          String?
  firm          String?
  status        String      @default("invited") // invited | nda_accepted | active | termsheet_sent | termsheet_signed | docs_out | dropped
  invitedAt     DateTime    @default(now())
  ndaAcceptedAt  DateTime?
  ndaIpAddress   String?
  ndaUserAgent   String?
  ndaTemplateId  String?   // ID of the NDA version they signed
  accessLogs     AccessLog[]
}

model File {
  id          String      @id @default(cuid())
  name        String
  storagePath String
  mimeType    String
  size        Int
  category    String
  uploadedAt  DateTime    @default(now())
  accessLogs  AccessLog[]
}

model NdaTemplate {
  id        String   @id @default(cuid())
  content   String
  updatedAt DateTime @default(now())
  isActive  Boolean  @default(true)
}

model AccessLog {
  id         String   @id @default(cuid())
  investorId String
  fileId     String
  action     String // "view" | "download"
  startedAt  DateTime @default(now())
  duration   Int? // seconds
  ipAddress  String?
  userAgent  String?
  investor   Investor @relation(fields: [investorId], references: [id], onDelete: Cascade)
  file       File     @relation(fields: [fileId], references: [id], onDelete: Cascade)
}

model AdminUser {
  id    String @id @default(cuid())
  email String @unique
}

model OtpCode {
  id        String   @id @default(cuid())
  email     String
  code      String
  expires   DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  @@index([email, code])
}
